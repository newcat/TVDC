<UserControl x:Class="tvdc.ViewerRow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:tvdc"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel Orientation="Horizontal" x:Name="mainPanel">
            <TextBlock Background="Transparent" Foreground="White" Text="{Binding displayName}" Margin="5,0,0,0" />
        </StackPanel>
    </Grid>
</UserControl>
